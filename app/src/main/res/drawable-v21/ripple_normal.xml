<?xml version="1.0" encoding="utf-8"?>
<!--
	Defines a ripple for the normal, unchecked state.
-->

	<!-- ripple color -->
<ripple
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/ripple_color_to_highlight"
	>

	<!--
		Background color. To do transparent, we set the color to WHITE
		and use the mask id.  It doesn't exactly make sense, but it works.
	-->
	<item
		android:id="@android:id/mask"
		android:drawable="@color/white"
	    />

</ripple>
